<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="report_medicate_appointment" model="ir.actions.report">
    <field name="name">Medicate Invoice</field>
    <field name="model">ir.medicate</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">PJ_TB.report_medicate_appointment_template</field>
    <field name="report_file">PJ_TB.report_medicate_appointment_template</field>
    <field name="binding_model_id" ref="model_ir_medicate"/>
    <field name="binding_type">report</field>
    <field name="groups_id" eval="[(4,ref('PJ_TB.group_hospital_manager'))]"/>
  </record>

  <template id="report_medicate_appointment_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="doc">
        <t t-call="web.external_layout">
          <div class="page">
            <h2>
              <strong>Order: </strong>
              <span t-field="doc.medicate_seq"/>
            </h2>
            <div>
              <strong>Patient Name: </strong>
              <span t-field="doc.patient_name"/>
            </div>
            <div>
              <strong>Appointment: </strong>
              <span t-field="doc.date_appointment_medicate"/>
            </div>
            <div style="margin-bottom: 20px;">
              <strong>Status: </strong>
              <span t-field="doc.medicate_state"/>
            </div>
            <table class="table">
              <thead>
                <tr>
                  <th>Medicament</th>
                  <th>Dose</th>
                  <th>Quantity</th>
                  <th>Unit price</th>
                </tr>
              </thead>
                <tr t-foreach='doc.medicate_lists' t-as='drug'>
                  <td>
                    <span t-field="drug.medicament"/>
                  </td>
                  <td>
                    <span t-field="drug.dose"/>
                  </td>
                  <td>
                    <span t-field="drug.quantity"/>
                  </td>
                  <td>
                    <span t-field="drug.unit_price"/>
                  </td>
                </tr>
                <tr>
                  <td colspan="3">
                    Total Amount
                  </td>
                  <td>
                    <span t-field="doc.medicate_total"/>
                  </td>
                </tr>
            </table>
          </div>
        </t>
      </t>
    </t>
  </template>


</odoo>
