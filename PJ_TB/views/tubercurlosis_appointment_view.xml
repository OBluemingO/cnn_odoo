<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="appointment_action" model="ir.actions.act_window">
    <field name="name">Appointment</field>
    <field name="res_model">ir.appointment</field>
    <field name="view_mode">tree,form,calendar</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        Create the first Appointment
      </p>
    </field>
  </record>

  <menuitem id="appointment_children_menu" name="Appointment" parent="appointments_menu" action="appointment_action" groups="PJ_TB.group_hospital_doctor"/>

  <record id="ir_appointment_view_form" model="ir.ui.view">
    <field name="name">ir.appointment.view.form</field>
    <field name="model">ir.appointment</field>
    <field name="arch" type="xml">
      <form string="Appointment">
        <sheet>
          <group>
            <field name="patient_id" />
            <field name="appointment_date" />
            <field name="appointment_doctor" />
          </group>
          <notebook>
            <page string="Comment">
              <field name="appointment_comment" />
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="ir_appointment_view_tree" model="ir.ui.view">
    <field name="name">ir.appointment.view.tree</field>
    <field name="model">ir.appointment</field>
    <field name="arch" type="xml">
      <tree>
        <field name="patient_id" />
        <field name="appointment_date" />
        <field name="appointment_doctor" />
      </tree>
    </field>
  </record>

  <record id="ir_appointment_view_calandar" model="ir.ui.view">
    <field name="name">ir.appointment.view.calandar</field>
    <field name="model">ir.appointment</field>
    <field name="arch" type="xml">
      <calendar date_start="appointment_date" mode='month'>
        <field name="patient_id" />
        <field name="appointment_doctor" />
        <field name="appointment_comment" />
      </calendar>
    </field>
  </record>

</odoo>
