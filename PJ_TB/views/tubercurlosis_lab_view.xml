<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="tb_lab_action" model="ir.actions.act_window">
    <field name="name">Draft Lab</field>
    <field name="res_model">ir.lab</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        Create the first Laboratory
      </p>
    </field>
  </record>

  <menuitem id="diagnostic_lab_menu" name="LAB" parent="diagnostic_menu" sequence="0" action="tb_lab_action" groups="PJ_TB.group_hospital_doctor"/>

  <record id="ir_lab_view_form" model="ir.ui.view">
    <field name="name">tb_lab_form</field>
    <field name="model">ir.lab</field>
    <field name="arch" type="xml">
      <form string="Lab">
        <header>
          <button string="Draft" name="button_draft" type="object" class="btn-danger" confirm=" Are you sure that you need to do it." attrs="{'invisible': [('lab_state','in', ('draft','complate'))]}"/>
          <button string="Test In Progress" name="button_test" type="object" class="oe_highlight" attrs="{'invisible': [('lab_state','=', 'test')]}" />
          <button string="Complate" name="button_complate" type="object" class="oe_highlight" attrs="{'invisible': [('lab_state','in', ('draft','complate'))]}" />
          <field name="lab_state" widget="statusbar"/>
        </header>
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="lab_seq"/>
            </h1>
          </div>
          <group>
            <group>
              <field name="patient_id" placeholder="Select Patient" attrs="{'readonly': [('lab_state','!=', 'draft')]}"/>
              <field name="doctors_id"/>
              <field name="lab_type" attrs="{'readonly': [('lab_state','!=', 'draft')]}"/>
            </group>
            <group>
              <field name="lab_date"/>
              <field name="lab_date_end"/>
            </group>
          </group>
          <notebook>
            <page string="Total Imagie Tubercurlosis Test" attrs="{'invisible': [('lab_type','!=', 'tb test')]}">
              <field name="lab_tests" attrs="{'readonly': [('lab_state','!=', 'test')]}">
                <tree>
                  <field name="lab_img"/>
                  <field name="lab_diagnosticresults"/>
                  <field name="lab_diagnosticresults_Complications"/>
                </tree>
              </field>
            </page>
            <page string="Total Blood Test" attrs="{'invisible': [('lab_type','!=', 'blood test')]}">
              <field name="lab_blood_ids" attrs="{'readonly': [('lab_state','!=', 'test')]}">
                <tree>
                  <field name="lab_blood_type"/>
                  <field name="lab_blood_range"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>


  <record id="ir_lab_view_tree" model="ir.ui.view">
    <field name="name">tb_lab_tree</field>
    <field name="model">ir.lab</field>
    <field name="arch" type="xml">
      <tree>
        <field name="lab_seq"/>
        <field name="patient_id"/>
        <field name="lab_type"/>
        <field name="lab_date"/>
        <field name="lab_date_end"/>
        <field name="lab_state" decoration-danger="lab_state == 'draft'" decoration-info="lab_state == 'test'" decoration-success="lab_state == 'complate'"/>
      </tree>
    </field>
  </record>

  <record id="ir_lab_view_search" model="ir.ui.view">
    <field name="name">tb_lab_search</field>
    <field name="model">ir.lab</field>
    <field name="arch" type="xml">
      <search string="Search Laboratory">
        <field name="lab_seq" filter_domain="[('lab_seq','like',self)]"/>
        <field name="patient_id" filter_domain="[('patient_id.PT_name','like',self)]"/>
      </search>
    </field>
  </record>


</odoo>
