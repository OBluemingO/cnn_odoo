<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="ir_lab_test_view_form" model="ir.ui.view">
    <field name="name">tb_lab_test_form</field>
    <field name="model">ir.lab_test</field>
    <field name="arch" type="xml">
      <form string="Lab test">
        <sheet>
          <group>
            <group>
              <field name="lab_img"/>
            </group>
            <group>
              <field name="img_preview" string="Imagie Preview" widget="image" readonly="1" options='{"size": [150, 140]}'/>
              <field name="lab_probility" widget="progressbar"/>
            </group>
          </group>
          <notebook>
            <page string="Diagnose">
              <group>
                <field name="lab_diagnosticresults" force_save="1"/>
                <field name="lab_diagnosticresults_Complications" attrs="{'invisible': [('lab_diagnosticresults','=', False)]}"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>


</odoo>
