<?xml version="1.0"?>
<odoo>
  <record id="report_patient_wizard_action" model="ir.actions.act_window">
    <field name="name">Patient Report</field>
    <field name="res_model">report.patient.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>  

  <menuitem id="report_wizard_menu" 
  name="Patient Report" 
  parent="report_root_menu" 
  action="report_patient_wizard_action" 
  sequence ="1"
  groups="PJ_TB.group_hospital_manager"
  />  

  <record id="report_patient_wizard_view_form" model="ir.ui.view">
    <field name="name">report.patient.wizard.form</field>
    <field name="model">report.patient.wizard</field>
    <field name="arch" type="xml">
        <form string="Report">
          <group>
            <group>
              <field name="patient_id" />
            </group>
            <group>
              <field name="report_select" />
              <field name="laboratory_id" attrs="{'invisible': [('report_select', '!=', 'lab')]}"/>
              <field name="medicate_id" attrs="{'invisible': [('report_select', '!=', 'med')]}"/>
            </group>
          </group>
          <footer>
              <button name="print_report" string="Print" type="object" class="btn-primary" />
              <button string="Cancel" class="btn-secondary" special="cancel" />
          </footer>
        </form>
    </field>
  </record>

</odoo>
